<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40BCEC"
    tools:context=".SiswaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Data Siswa"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/judul"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIS"
        android:id="@+id/nis"
        app:layout_constraintTop_toBottomOf="@+id/judul"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="70dp"
        />
    <EditText
        android:id="@+id/input_nis"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan NIS"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/judul"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:id="@+id/nama"
        app:layout_constraintTop_toBottomOf="@+id/nis"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="50dp"
        />
    <EditText
        android:id="@+id/input_nama"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/input_nis"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:id="@+id/alamat"
        app:layout_constraintTop_toBottomOf="@+id/nama"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="40dp"
        />
    <EditText
        android:id="@+id/input_alamat"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Alamat"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/input_nama"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handphone"
        android:id="@+id/hp"
        app:layout_constraintTop_toBottomOf="@+id/alamat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/input_hp"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Handphone"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/input_alamat"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keterangan"
        android:id="@+id/ket"
        app:layout_constraintTop_toBottomOf="@+id/hp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/input_ket"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Keterangan"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/input_hp"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        />
    <Button
        android:layout_width="200dp"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="25dp"
        android:id="@+id/okButton"
        app:layout_constraintTop_toBottomOf="@+id/input_ket"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="popupHandler"
        />
</androidx.constraintlayout.widget.ConstraintLayout>